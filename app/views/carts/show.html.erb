
<% if flash[:notice]%>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
<%end%>

<%= render 'confirm_cart' %>

<% if @cart_items.empty? %>
    <%= link_to 'Return to Products', root_path, :class=>"btn btn-primary me-md-2" %>
<% else %>
    <%= link_to 'Proceed to Checkout', checkout_path, :class=>"btn btn-primary me-md-2" %>
<% end %>