          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your cart</span>
          </h4>
          <ul class="list-group mb-3">
            <% @cart_items.each do |item| %>            
              <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                  <h6 class="my-0"><%= item.name%></h6>
                  <small class="text-muted"><%= item.description.truncate (40)%></small>        
                </div>
                <span class="text-muted">$<%= item.total_product_price %> (<%=item.quantity%>)</span>
              </li>    
            <% end %>
          </ul>
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Order Summary</span>
          </h4>
          <ul class="list-group mb-3">
              <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                  <h6 class="my-0">Total Item Value:</h6>    
                </div>
                <span class="text-muted">$<%=current_user.total_item_value%></span>
              </li>          
              <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                  <h6 class="my-0">Shipping & Handling:</h6>      
                </div>
                <span class="text-muted">$<%=number_with_precision(current_user.total_shipping_cost, precision: 2)%></span>
              </li>
              <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                  <h6 class="my-0">Final Cost:</h6>    
                </div>
                <span class="text-muted">$<%=current_user.final_cost%></span>
              </li>      
          </ul>
